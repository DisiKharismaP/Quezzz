<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_won"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.WonFragment" >

    <ImageView
        android:id="@+id/iv_won"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/won"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_congrats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/congrats"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/iv_won"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/iv_won"
        app:layout_constraintTop_toBottomOf="@+id/iv_won" />

    <TextView
        android:id="@+id/tv_won"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/txt_won"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_congrats"
        app:layout_constraintStart_toStartOf="@+id/tv_congrats"
        app:layout_constraintTop_toBottomOf="@+id/tv_congrats" />

    <Button
        android:id="@+id/btn_got_it_won"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape_round"
        android:text="@string/got_it"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_won"
        app:layout_constraintStart_toStartOf="@+id/tv_won"
        app:layout_constraintTop_toBottomOf="@+id/tv_won"
        app:layout_constraintVertical_bias="0.194" />
</androidx.constraintlayout.widget.ConstraintLayout>